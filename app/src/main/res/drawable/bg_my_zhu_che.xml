<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/blue" />

            <padding android:bottom="@dimen/space_5" android:left="@dimen/space_10" android:right="@dimen/space_10" android:top="@dimen/space_5"></padding>

            <solid android:color="@color/blue"></solid>

            <corners android:radius="@dimen/space_10" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/blue" />

            <padding android:bottom="@dimen/space_5" android:left="@dimen/space_10" android:right="@dimen/space_10" android:top="@dimen/space_5"></padding>

            <solid android:color="@color/blue"></solid>

            <corners android:radius="@dimen/space_10" />
        </shape></item>
    <item><shape android:shape="rectangle">

            <corners android:radius="@dimen/space_30" />

            <padding android:bottom="@dimen/space_5" android:left="@dimen/space_10" android:right="@dimen/space_10" android:top="@dimen/space_5"></padding>

            <solid android:color="@android:color/transparent"></solid>

            <stroke android:width="1.0px" android:color="@color/white" />
        </shape></item>

</selector>